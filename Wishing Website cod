3. JavaScript File (script.js)
javascript
Copy code
function generateWish() {
    const name = document.getElementById('name').value;
    const message = document.getElementById('message').value;

    if (name && message) {
        const wishOutput = `Dear ${name},\n\n${message}\n\nBest Wishes,\nYour Wishing Website`;
        document.getElementById('wish-output').innerText = wishOutput;
        document.getElementById('wish-preview').style.display = 'block';
    } else {
        alert("Please fill in all fields!");
    }
}

function shareWish() {
    const wishText = document.getElementById('wish-output').innerText;
    const whatsappURL = `https://wa.me/?text=${encodeURIComponent(wishText)}`;
    window.open(whatsappURL, '_blank');
}
